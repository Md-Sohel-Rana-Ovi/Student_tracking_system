<odoo>
	<data>
		<template id="student_extra_curriculam_activity_template" name="Student Personal Info">
			<t t-call="website.layout">
				<body>
					<div class="container">
						<div class="container-xl">
							<div class="row pt-2">
								<div class="table-responsive table-wrapper">
									<div class="table-title">
										<div class="row">
											<div class="col-sm-6">
												<h2>
													<b>
														Extra Curriculumn Activities
													</b>
												</h2>
											</div>
											<div class="col-sm-6">
												<!-- <a href="/dashboard" class="btn btn-info">
													<i class="bi bi-arrow-left-circle-fill">
													</i>
													<span>
														Back to Dashboard
													</span>
												</a> -->
											</div>
										</div>
									</div>
									<table class="table table-striped table-hover">
										<thead>
											<tr>
												<th width="50%">
													Activity
												</th>
												<th width="50%">
													Description
												</th>
											</tr>
										</thead>

										<tbody>
											<div class="invisible">
												<t t-if="extra_curriculam" t-esc="extra_curriculam['student_id']" />
											</div>
											<t t-foreach="extra_curriculam['activity_id']"
											t-as="extra_activity">
											<tr>
												<td>
													<t t-if="extra_activity" t-esc="extra_activity['activity']" />
												</td>
												<td>
													<t t-if="extra_activity" t-esc="extra_activity['description']" />
												</td>
											</tr>
										</t>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</body>
			</t>
		</template>
	</data>
</odoo>